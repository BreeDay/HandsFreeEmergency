<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gifs.gif_unconscious">

    <ImageView
        android:id="@+id/img_uncon"
        android:layout_width="325dp"
        android:layout_height="348dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cpr" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="295dp"
        android:layout_height="316dp"
        android:layout_marginTop="8dp"
        android:text="Check for a pulse. If there is no pulse, interlock your fingers and give chest compressions.  Every 60 presses, open the airway and give the person two breaths. Continue chest compressions until the ambulance crew arrives. "
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_uncon" />
</android.support.constraint.ConstraintLayout>